{
    "name": "silex-plus-mink",
    "version": "1.0.0",
    "require": {
        "php":                 ">=5.3.0",
        "silex/silex":         "1.0.*@dev",
        "twig/twig":           "*",
        "symfony/config":      "2.1.*",
        "symfony/twig-bridge": "2.1.*",
        "symfony/form":        "2.1.*",
        "symfony/validator":   "2.1.*",
        "symfony/translation": "2.1.*"
    },

    "require-dev": {
        "phpunit/phpunit":               "3.7.19",
        "behat/mink":                    "~1.5",
        "behat/mink-browserkit-driver":  "~1.1",
        "behat/mink-selenium2-driver":   "~1.1"
    },

    "config": {
        "bin-dir": "bin/"
    },
    "autoload": {
        "psr-0": {
            "Acme": "src/"
        }
    },
    "extra": {
        "heroku": {
            "document-root": "web",
            "index-document": "index.php"
        }
    }
}
